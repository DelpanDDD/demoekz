<Window x:Class="TourAgentstvo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourAgentstvo"
        mc:Ignorable="d"
        Title="TourAgent" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" ></RowDefinition>
            <RowDefinition Height="*" ></RowDefinition>
        </Grid.RowDefinitions>

        <Border Background="#FFE8C57B" Grid.ColumnSpan="2"/>
        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2">
            <TextBlock 
                   Margin="40 0 0 0" 
                   FontSize="32"  
                   Foreground="#FF8C11BD" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontFamily="Arial Black"> 
            Туристическое агенство</TextBlock>
            <Image Source="logo.jpg" MaxHeight="130" MaxWidth="130" Stretch="Fill"/>

        </StackPanel>
        <Frame Grid.Row="1" Name="MainFrame"></Frame>
    </Grid>
</Window>
